{% extends 'gentelella.html.twig' %}
{% block body %}
    <section id="breadcrumb-container">
        Administración » <a href="{{path('briooz_color_index')}}">Colores</a> » <strong>Editar color</strong>
    </section>
    <section id="titulo-container">
        <h2>Editar color</h2>
    </section>
    <section>
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fas fa-edit"></i> <strong>Editar</strong></div>
            <div class="panel-body">
                <div class="row" style="margin-bottom: 5px;height:40px;">
                    <div class="col-xs-12 col-md-6">
                        <form action="{{path('briooz_color_update')}}" method="POST" id="form">
                            <input type="hidden" name="idcolor" id="idcolor" value="{{color.id}}"/>
                            <fieltset>
                                <div class="form-group">
                                    <input type="text" placeholder="(*) Color" name="color" id="color" class="form-control" value="{{color.descripcion}}"/>
                                    <div class="text-danger msj-error-form hidden" id="error_color"><i class="fas fa-exclamation-triangle"></i> El campo no puede ser vacio</div>
                                </div>
                                <div class="form-group"> 
                                    <a href="#" id="boton-enviar"  class="btn btn-success"><i class="fas fa-save"></i> Guardar</a>
                                    <a href="#" id="boton-cancelar"  class="btn btn-danger"><i class="fas fa-times"></i> Cancelar</a>
                                </div>
                                <div class="row" style="margin-bottom: 7px;">
                                    <div class="col-xs-12" style="text-align:left;">
                                        <span class="text-danger"><strong>(*) campo obligatorio</strong></span>
                                    </div>
                                </div>
                            </fieltset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>    
{% endblock %}
{% block javascripts %}
    {{ parent()}}
    <script>
        $(function () {
            $('#boton-cancelar').click(function (e) {
                e.preventDefault();
                $('#form')[0].reset();
            });

            $('#boton-enviar').click(function (e) {
                e.preventDefault();

                var enviar = true;
                var color = $('#color');
                var error_color = $('#error_color');

                if (color.val() == "") {
                    enviar = false;
                    error_color.removeClass('hidden');
                    color.css('border-color', '#a94442');
                    color.focus();
                }

                if (enviar == true) {
                    $('#form').submit();
                }
            });
        });
    </script>
{% endblock %}

