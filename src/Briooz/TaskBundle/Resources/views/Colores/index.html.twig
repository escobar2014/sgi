{% extends 'gentelella.html.twig' %}
{% block body %}
    <section id="breadcrumb-container">
        Administracion Â» <strong>Colores</strong>
    </section>
    <section id="titulo-container">
        <h2>Colores</h2>
    </section>
    <section>
        <div class="panel panel-primary">
            <div class="panel-heading"><strong>Total de registros: </strong> <span id="total" class="total-items" data-toggle="tooltip" data-placement="top" title="Total de registros"> <span id="total">{{ colores.getTotalItemCount}}</span></span></div>
            <div class="panel-body">
                <div class="row" style="margin-bottom: 5px;height:40px;">
                    <div class="col-xs-12">  
                        <a href="{{path('briooz_color_index')}}" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Cargar todo"><i class="fas fa-sync"></i> Cargar todo</a>
                        <a href="{{path('briooz_color_add')}}" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Nuevo color"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo color</a>
                    </div>
                </div>
                <div class="progress no-border hidden" id="delete-progress">
                    <div class="progress-bar progress-bar-striped progress-bar-danger active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width:100%;">
                        <span class="sr-only">Eliminando ... </span>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th width="5%">Id</th>
                                <th width="75%">Color</th>
                                <th width="20%"></th>
                            </tr>
                        </thead>
                        <tbody class="table-hover">
                            {% set cont = 0 %}
                            {% for color in colores %}
                                <tr data-id="{{color.id}}">
                                    <td><a href="{{path('briooz_color_edit',{id:color.id})}}">{{color.id}}</a></td>
                                    <td><a href="{{path('briooz_color_edit',{id:color.id})}}">{{color.descripcion}}</a></td>
                                    <td align="right">
                                        <a href="{{path('briooz_color_edit',{id:color.id})}}" class="btn btn-primary btn-xs"><i class="fas fa-edit"></i> <span style="font-size: 12px;"></span></a>
                                        <a href="#" class="btn-delete btn btn-danger btn-xs"><i class="fas fa-trash"></i> <span style="font-size: 12px;"></span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(colores) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ include('BrioozTaskBundle:Colores:form/form.html.twig',{form:delete_form_ajax,width_submit:false}) }}   
{% endblock %}
{% block javascripts %}
    {{ parent()}}
    <script src="{{ asset('public/js/delete/colores/delete.js')}}"></script>
{% endblock %}
